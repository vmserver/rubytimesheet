<%-
  include('layout', {
    title: 'Employees',
    user,
    body: `
      <section class="card">
        <div class="card-header">
          <h1>Employees</h1>
          <a href="/admin/employees/new" class="btn btn-primary">Add Employee</a>
        </div>
        <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th class="hide-sm">ID</th>
              <th>Name</th>
              <th>Username</th>
              <th>Email</th>
              <th>Admin</th>
              <th>Active</th>
              <th class="hide-sm">Created</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            ${
              employees.length === 0
                ? '<tr><td colspan="8">No employees yet.</td></tr>'
                : employees
                    .map(
                      (e) => `
              <tr>
                <td class="hide-sm">${e.id}</td>
                <td>${e.name}</td>
                <td>${e.username}</td>
                <td>${e.email}</td>
                <td>${e.is_admin ? 'Yes' : 'No'}</td>
                <td>${e.active ? 'Yes' : 'No'}</td>
                <td class="hide-sm">${new Date(e.created_at).toLocaleString('en-US')}</td>
                <td>
                  <a href="/admin/employees/${e.id}" class="btn btn-outline">Edit</a>
                </td>
              </tr>`
                    )
                    .join('')
            }
          </tbody>
        </table>
        </div>
      </section>
    `
  })
%>


